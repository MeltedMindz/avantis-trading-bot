# Aggressive Trading Configuration for 10% Daily Returns
# Copy this to .env and configure with your settings

# =============================================================================
# WALLET CONFIGURATION
# =============================================================================
# Your private key (REQUIRED)
PRIVATE_KEY=0x your_private_key_here

# Network configuration
PROVIDER_URL=https://mainnet.base.org
WS_URL=wss://hermes.pyth.network/ws

# =============================================================================
# AGGRESSIVE TRADING PARAMETERS
# =============================================================================
# Daily profit target (10% for compound growth)
DAILY_TARGET_PERCENTAGE=10.0

# Starting capital (will auto-detect from wallet if not set)
INITIAL_CAPITAL=10000

# Maximum daily loss before stopping (5% safety net)
MAX_DAILY_LOSS_PERCENTAGE=5.0

# =============================================================================
# RISK MANAGEMENT
# =============================================================================
# Maximum leverage for aggressive trades
MAX_LEVERAGE=50

# Maximum concurrent trades
MAX_CONCURRENT_TRADES=10

# Position sizing parameters
MAX_POSITION_SIZE_PERCENTAGE=30.0  # Max 30% of capital per position
MIN_POSITION_SIZE=100              # Minimum $100 position

# Stop loss and take profit
QUICK_PROFIT_THRESHOLD=3.0         # Take profit at 3%
QUICK_STOP_LOSS=1.5               # Stop loss at 1.5%
MAX_HOLD_TIME_MINUTES=60          # Maximum trade hold time

# =============================================================================
# TRADING STRATEGY PARAMETERS
# =============================================================================
# Minimum confidence threshold for trades
MIN_CONFIDENCE_THRESHOLD=0.55

# Volume threshold for signal confirmation
VOLUME_THRESHOLD=1.5

# RSI parameters (more aggressive)
RSI_OVERSOLD=25
RSI_OVERBOUGHT=75

# MACD signal threshold
MACD_SIGNAL_THRESHOLD=0.3

# =============================================================================
# COMPOUND GROWTH SETTINGS
# =============================================================================
# Compound growth tracking
COMPOUND_DATA_FILE=compound_data.json

# Performance tracking
TRACK_HOURLY_PERFORMANCE=true
TRACK_PHASE_PERFORMANCE=true

# =============================================================================
# TRADING PHASES
# =============================================================================
# Morning aggressive (6-10 AM)
MORNING_AGGRESSIVE_MULTIPLIER=1.5

# Midday balanced (10 AM-2 PM)
MIDDAY_BALANCED_MULTIPLIER=1.0

# Afternoon momentum (2-6 PM)
AFTERNOON_MOMENTUM_MULTIPLIER=1.2

# Evening consolidation (6-10 PM)
EVENING_CONSOLIDATION_MULTIPLIER=0.8

# Night defensive (10 PM-6 AM)
NIGHT_DEFENSIVE_MULTIPLIER=0.5

# =============================================================================
# TRADING PAIRS
# =============================================================================
# Active trading pairs (comma-separated)
ACTIVE_PAIRS=ETH/USD,BTC/USD,SOL/USD,AVAX/USD,MATIC/USD

# Priority pairs for aggressive trading
PRIORITY_PAIRS=ETH/USD,BTC/USD

# =============================================================================
# NOTIFICATIONS AND ALERTS
# =============================================================================
# Enable/disable various alerts
ENABLE_DAILY_TARGET_ALERTS=true
ENABLE_LOSS_ALERTS=true
ENABLE_PROFIT_ALERTS=true
ENABLE_STRATEGY_ALERTS=true

# Alert thresholds
PROFIT_ALERT_THRESHOLD=5.0         # Alert when profit exceeds 5%
LOSS_ALERT_THRESHOLD=2.0           # Alert when loss exceeds 2%

# =============================================================================
# PERFORMANCE MONITORING
# =============================================================================
# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Performance metrics
TRACK_WIN_RATE=true
TRACK_AVERAGE_RETURN=true
TRACK_MAX_DRAWDOWN=true
TRACK_SHARPE_RATIO=true

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================
# Trading interval (seconds between cycles)
TRADING_INTERVAL=30

# Maximum trades per day
MAX_TRADES_PER_DAY=50

# Consecutive loss limit before pausing
CONSECUTIVE_LOSS_LIMIT=3

# Emergency stop conditions
EMERGENCY_STOP_ON_EXTREME_LOSS=true
EMERGENCY_STOP_LOSS_PERCENTAGE=10.0

# =============================================================================
# BACKTESTING (for strategy optimization)
# =============================================================================
# Enable backtesting mode
BACKTESTING_MODE=false

# Backtesting parameters
BACKTEST_START_DATE=2024-01-01
BACKTEST_END_DATE=2024-12-31
BACKTEST_INITIAL_CAPITAL=10000

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================
# Discord webhook for notifications (optional)
DISCORD_WEBHOOK_URL=

# Telegram bot token and chat ID (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Email notifications (optional)
EMAIL_SMTP_SERVER=
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_TO=

# =============================================================================
# DEVELOPMENT AND DEBUGGING
# =============================================================================
# Enable debug mode
DEBUG_MODE=false

# Save detailed logs
SAVE_DETAILED_LOGS=true

# Mock trading mode (for testing)
MOCK_TRADING=false

# Paper trading mode
PAPER_TRADING=false
